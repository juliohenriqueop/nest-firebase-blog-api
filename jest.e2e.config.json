{
  "resolver": "./jest-resolver.js",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@modules/app$": "<rootDir>/src/index",
    "^@modules/(.*)$": "<rootDir>/src/$1/index"
  },
  "clearMocks": true
}
